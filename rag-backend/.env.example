# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Embedding Model Configuration
# Options: text-embedding-3-small (1536 dims), text-embedding-3-large (3072 dims)
EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Vector Database Configuration
# Local development
QDRANT_URL=http://localhost:6333

# Cloud deployment (Qdrant Cloud)
# QDRANT_URL=https://your-project-id.qdrant.io
# QDRANT_API_KEY=your-qdrant-cloud-api-key

QDRANT_COLLECTION_NAME=textbook_content

# Chat Model Configuration
# Using Gemini via OpenAI-compatible API
CHAT_MODEL=gemini-2.5-flash

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Authentication Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration (optional, for future use)
DATABASE_URL=sqlite:///./test.db
DATABASE_ECHO=false

# Feature Flags
ENABLE_RAG_INDEXING=true
ENABLE_AUTH=true

# API Configuration
API_PORT=8000

# Logging
LOG_LEVEL=INFO
