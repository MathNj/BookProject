# Production Environment Configuration
# RAG Backend (FastAPI)

PYTHON_ENV=production

# API Configuration
API_PORT=8000
API_URL=https://rag-api.yourdomain.com

# Frontend Configuration (CORS)
FRONTEND_URL=https://mathnj.github.io/BookProject/
CORS_ORIGIN=https://mathnj.github.io/BookProject/

# Gemini API (Google)
API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-gemini-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Chat Model Configuration
CHAT_MODEL=gemini-2.5-flash
EMBEDDING_MODEL=text-embedding-004

# Qdrant Vector Database
QDRANT_URL=https://55277fbd-a0f5-47cb-9a26-51efb3180320.europe-west3-0.gcp.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=textbook_content

# Authentication Configuration
JWT_SECRET_KEY=change-this-to-strong-random-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@host/database

# Feature Flags
ENABLE_RAG_INDEXING=true
ENABLE_AUTH=true

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=production
